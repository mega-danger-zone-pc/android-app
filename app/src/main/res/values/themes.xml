<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Megaapp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/red</item>
    </style>

    <style name="Theme.Megaapp" parent="Base.Theme.Megaapp" >
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemBackground">@color/white</item>
        <item name="itemIconTint">@color/white</item>
    </style>

    <style name="InputTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/smoke2</item>
        <item name="android:backgroundTint">@color/smoke3</item>
        <item name="android:background">@drawable/rounded_editview</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:padding">10dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="roundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="roundImageView2">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">22dp</item>
    </style>

    <style name="button">
        <item name="android:state_selected">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">9sp</item>
    </style>
    <style name="buttonBuy" parent="button">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="buttonOrder">
        <item name="android:state_selected">true</item>
        <item  name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_button_bord</item>
    </style>
</resources>